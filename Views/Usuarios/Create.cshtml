
    
@{
    ViewData["Title"] = "Login";
}

<div class="text-center ">
    <h1 class="display-4 mb-5">Registrar Usuario</h1>
    <div class="container mt-4 text-light">
    <form enctype="multipart/form-data" class="form form-floating d-flex flex-wrap flex-column gap-4" action="" method="post" data-bs-theme="dark" onsubmit="return confirmarCreacion(event)">
          <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 col-12 text-center">
             <input id="correo" class="form-control" type="email" name="Correo" placeholder="asd" required/>
             <label for="correo" class="ms-2 ">Correo</label>
         </div>
         <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 col-12 text-center">
             <input id="clave" class="form-control" type="password" name="Clave" placeholder="asd" required/>
             <label for="clave" class="ms-2 ">Clave</label>
         </div>
         <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 col-12 text-center">
             <input id="claveNuevamente" class="form-control" type="password" name="ClaveNuevamente" placeholder="asd" required/>
             <label for="ClaveNuevamente" class="ms-2 ">Clave Nuevamente</label>
         </div>
         <hr class="col-md-8 col 12 mx-auto ">
         <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 col-12 text-center">
            <input id="apellido" class="form-control" type="text" name="Apellido" placeholder="asd" required>
            <label for="apellido" class="ms-2 ">Apellido</label>
         </div>
         
         <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 col-12 text-center">
             <input id="nombre" class="form-control" type="text" name="Nombre" placeholder="asd" required>
             <label for="nombre" class="ms-2 ">Nombre</label>
         </div>
         <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 col-12 text-center">
             <input id="dni" class="form-control" type="text" name="Dni" placeholder="asd" pattern="^\d{2}\.\d{3}\.\d{3}$" title="XX.XXX.XXX" required>
             <label for="dni" class="ms-2 ">DNI <span class="fs-7">(formato: XX.XXX.XXX)</span></label>
         </div>
         
         <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 col-12 text-center">
             <input id="telefono" class="form-control" type="tel" name="Telefono" placeholder="asd" pattern="^\+\d{2} \d{2,3}-\d{6,7}$" title="+XX XXX-XXXXXXX" required>
             <label for="telefono" class="ms-2 ">Teléfono <span class="fs-7">(Formato +XX XXX-XXXXXXX)</span></label>
         </div>
         
        <hr class="col-md-8 col 12 mx-auto ">
         <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 text-center">
            <select id="rol" class="form-select" name="Rol" required>
            @foreach (var rol in ViewBag.roles)
            {
                <option value="@rol">@rol</option>
            }
            </select>
            <label for="Rol" class="ms-2">Rol</label>
         </div>

         <div class="d-flex gap-4 align-middle   mx-auto  col-12 col-md-8 text-start flex-column">
                   <div class="mx-auto td-user-label">
                                        
                    <img id="avatarImg" src="/Uploads/default.png" alt="Avatar" class="img-square-large td-usuario mx-auto border border-5 border-light rounded-circle">
                
                   </div>
                   <input id="avatar" class="form-control  form-control-lg" type="file" name="AvatarFile" placeholder="asd"/>
        </div>
         
         <input id="estado" value=true class="form-control" type="hidden" name="Estado" placeholder="asd" required/>
         <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 col-12 text-center">
             <button type="button" class="btn btn-primary mx-auto" style="width: fit-content;" onclick="window.location.href = '/Inquilinos'"><i class="fa-solid fa-circle-left"></i></button>
             <button type="submit" class="btn btn-primary mx-auto" style="width: fit-content;"><i class="fa-solid fa-user-plus"></i></button>
         </div>
       
        
    </form>
    <script src="~/js/previewAvatar.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      @if (TempData.ContainsKey("AlertMessage") && TempData.ContainsKey("AlertType"))
      {
          var alertMessage = TempData["AlertMessage"];
          var alertType = TempData["AlertType"];
          <text>
              Swal.fire({
                  icon: '@alertType',
                  title: '@alertMessage',
                  showConfirmButton: false,
                  timer: 2000 // Mostrar durante 2 segundos
              });
          </text>
      }
    </script>

    
</div>

</div>