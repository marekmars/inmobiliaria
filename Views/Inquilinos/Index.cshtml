@model List<Inmobiliaria.Models.Inquilino>

@{
    ViewData["Title"] = "Inquilinos";
}

<div class="text-center">
    <h1 class="display-4 mb-5">Inquilinos</h1>

    <table class="table table-striped table-dark table-hover">
        <div class="row d-flex justify-content-between">
            <div class="col d-flex justify-content-start">
                <h5 class="position-relative">Detalle de los Inquilinos</h5>
            </div>
            <div class="col d-flex justify-content-end">
               <a href="/Inquilinos/Create" class="btn btn-success "> <i class="fa-solid fa-circle-plus "></i></a>
            </div>


        </div>
        <thead>
            <tr>                
                <th>Apellido</th>
                <th>Nombre</th>
                <th>DNI</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th>Acciones</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var inquilino in Model)
            { 

                    <tr>

                        <td>@inquilino.Apellido</td>
                        <td>@inquilino.Nombre</td>
                        <td>@inquilino.Dni</td>
                        <td>@inquilino.Telefono</td>
                        <td>@inquilino.Correo</td>
                        <td class="d-flex gap-2 justify-content-center align-items-center" >
                          <form asp-action="Delete" asp-route-id="@inquilino.Id" onsubmit="return confirmarEliminacion(event)">
                              <button type="submit" class="btn btn-danger w-75 h-75 d-flex justify-content-center align-items-center">
                                  <i class="fa-solid fa-trash"></i>  
                              </button>
                          </form>
                         <div >
                           <a href="/Inquilinos/Update/@inquilino.Id" class="btn btn-primary w-75  d-flex justify-content-center align-items-center"> <i class="fa-solid fa-pen-to-square" style="cursor:pointer;"></i> </a>
                         </div>
                         <div >
                           <a href="/Inquilinos/Details/@inquilino.Id" class="btn btn-info w-75  d-flex justify-content-center align-items-center"> <i class="fa-solid fa-eye style="cursor:pointer;""></i> </a>
                         </div>
                        </td>
                         


                    </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      @if (TempData.ContainsKey("AlertMessage") && TempData.ContainsKey("AlertType"))
      {
          var alertMessage = TempData["AlertMessage"];
          var alertType = TempData["AlertType"];
          <text>
              Swal.fire({
                  icon: '@alertType',
                  title: '@alertMessage',
                  showConfirmButton: false,
                  timer: 2000 // Mostrar durante 2 segundos
              });
          </text>
      }
    </script>

