@model Inmobiliaria.Models.Contrato
    
@{
    ViewData["Title"] = "Detalles Contrato";
}

<div class="text-center">
    <h1 class="display-4 mb-5">Detalle Contrato</h1>
 <div class="container mt-4">
    <div class="form  d-flex flex-wrap flex-column gap-4"  data-bs-theme="dark">
        <h3>Datos del Contrato</h3>
        <input value=@Model.Id name="Id" type="hidden">
        <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 text- *center">
            <input value=@Model.FechaInicio.ToString("dd-MM-yyyy") class="form-control" type="text" name="fechaInicio" placeholder="asd" disabled>
            <label for="fechaInicio" class="ms-2">Fecha de Inicio</label>
         </div>
         <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 text- *center">
            <input value=@Model.FechaFin.ToString("dd-MM-yyyy") class="form-control" type="text" name="fechaFin" placeholder="asd" disabled>
            <label for="fechaFin" class="ms-2">Fecha de Finalizacion</label>
         </div>
         <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 text- *center">
            <input value= @(Model.Estado ? "Activo" : "Inactivo") class="form-control" type="text" name="estado" placeholder="asd" disabled>
            <label for="estado" class="ms-2">Estado</label>
         </div>

        <h3>Datos del Inquilino</h3>
        <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 text- *center">
            <input value="@Model.Inquilino.Apellido" class="form-control" type="text" name="Apellido" placeholder="asd" disabled>
            <label for="apellido" class="ms-2">Apellido</label>
         </div>
         
         <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 text-center">
             <input  value="@Model.Inquilino.Nombre" class="form-control" type="text" name="Nombre" placeholder="asd" disabled>
             <label for="nombre" class="ms-2">Nombre</label>
         </div>
         
         <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 text-center">
             <input  value="@Model.Inquilino.Dni" class="form-control" type="text" name="Dni" placeholder="asd" disabled>
             <label for="dni" class="ms-2">DNI <span class="fs-7">(formato: XX.XXX.XXX)</span></label>
         </div>
         
         <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 text-center">
             <input  value="@Model.Inquilino.Telefono" class="form-control" type="tel" name="Telefono" placeholder="asd" disabled>
             <label for="telefono" class="ms-2">Teléfono <span class="fs-7">(Formato +XX XXX-XXXXXXX)</span></label>
         </div>
         
         <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 text-center">
             <input value="@Model.Inquilino.Correo" class="form-control" type="email" name="Correo" placeholder="asd" disabled>
             <label for="correo" class="ms-2">Correo</label>
         </div>
         

          <h3>Datos del Inmueble</h3>
          <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 text-center">
            <input  value="@Model.Inmueble.Direccion" class="form-control" type="text" name="Direccion" disabled>
            <label for="direccion" class="ms-2">Dirección</label>
          </div>
          
          <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 text-center">
              <input  value="@Model.Inmueble.Uso" class="form-control" type="text" name="Uso" disabled>
              <label for="uso" class="ms-2">Uso</label>
          </div>
          
          <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 text-center">
              <input  value="@Model.Inmueble.Tipo" class="form-control" type="text" name="Tipo" disabled>
              <label for="tipo" class="ms-2">Tipo</label>
          </div>
          
          <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 text-center">
              <input value="@Model.Inmueble.CantAmbientes" class="form-control" type="number" name="CantAmbientes" disabled>
              <label for="cantAmbientes" class="ms-2">Cantidad de Ambientes</label>
          </div>
          
          <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 text-center">
              <input value="@Model.Inmueble.Latitud" class="form-control" type="text" name="Latitud" step="any" disabled>
              <label for="latitud" class="ms-2">Latitud</label>
          </div>
          
          <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 text-center">
              <input  value="@Model.Inmueble.Longitud" class="form-control" type="text" name="Longitud" step="any" disabled>
              <label for="longitud" class="ms-2">Longitud</label>
          </div>
          
          <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 text-center">
              <input id="precio" value="$ @Model.Inmueble.Precio" class="form-control" type="text" name="Precio" step="any" disabled>
              <label for="precio" class="ms-2">Precio</label>
          </div>

          <div class="d-flex gap-5 form-floating justify-content align-items-center mx-auto col-md-8 text-center">
             <button type="button" class="btn btn-primary mx-auto" style="width: fit-content;" onclick="window.location.href = '/Contratos'"><i class="fa-solid fa-circle-left"></i></button>
         </div>
        
    </div>
</div>


</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      @if (TempData.ContainsKey("AlertMessage") && TempData.ContainsKey("AlertType"))
      {
          var alertMessage = TempData["AlertMessage"];
          var alertType = TempData["AlertType"];
          <text>
              Swal.fire({
                  icon: '@alertType',
                  title: '@alertMessage',
                  showConfirmButton: false,
                  timer: 2000 // Mostrar durante 2 segundos
              });
          </text>
      }
    </script>

