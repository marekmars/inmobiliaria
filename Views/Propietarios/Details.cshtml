@model Inmobiliaria.Models.Propietario
    
@{
    ViewData["Title"] = "Detalles Propietario";
}
<div class="text-center ">
    
    <div class="text-center ">
       <div class="container mt-4">
           <div class="card mx-auto col-md-8">
               <div class="card-body">
                   <h3>Datos del Propietario</h3>
                   
                   <div class="form-group form-floating">        
                       <input id="apellido" value="@Model.Apellido" class="form-control input-top" type="text" name="Apellido" placeholder="asd" disabled>
                       <label for="apellido">Apellido</label>
                   </div>
                   
                   <div class="form-group form-floating">                       
                       <input id="nombre" value="@Model.Nombre" class="form-control input-mid" type="text" name="Nombre" placeholder="asd" disabled>
                       <label for="nombre">Nombre</label>
                   </div>
                   
                   <div class="form-group form-floating">                       
                       <input id="dni" value="@Model.Dni" class="form-control input-mid" type="text" name="Dni" placeholder="asd" disabled>
                       <label for="dni">DNI <span class="fs-7">(formato: XX.XXX.XXX)</span></label>
                   </div>
                   
                   <div class="form-group form-floating">                       
                       <input id="telefono" value="@Model.Telefono" class="form-control input-mid" type="tel" name="Telefono" placeholder="asd" disabled>
                       <label for="telefono">Teléfono <span class="fs-7">(Formato +XX XXX-XXXXXXX)</span></label>
                   </div>
                   
                   <div class="form-group form-floating">                     
                       <input id="correo" value="@Model.Correo" class="form-control input-bot" type="email" name="Correo" placeholder="asd" disabled>
                        <label for="correo">Correo</label>
                   </div>
                   
                   
                   
               </div>
           </div>
       </div>
    </div>
   <div class="form-group mt-3">
                       <button type="button" class="btn btn-primary mx-auto" style="width: fit-content;" onclick="window.location.href = '/Propietarios'"><i class="fa-solid fa-circle-left"></i></button>
   </div>

        



