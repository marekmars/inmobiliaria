@model List<Inmobiliaria.Models.Propietario>
    
@{
    ViewData["Title"] = "Propietarios";
}

<div class="text-center">
    <h1 class="display-4 mb-5">Propietarios</h1>

    <table class="table table-striped table-dark table-hover">
        <div class="row d-flex justify-content-between">
            <div class="col d-flex justify-content-start">
                <h5 class="position-relative">Detalle de los Propietarios</h5>
            </div>
            <div class="col d-flex justify-content-end">
               <a href="/Propietarios/Create" class="btn btn-success "> <i class="fa-solid fa-circle-plus "></i></a>
            </div>
            

        </div>
        <thead>
            <tr>                
                <th>Apellido</th>
                <th>Nombre</th>
                <th>DNI</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th>Acciones</th>
            </tr>
            
        </thead>
        <tbody>
            @foreach (var propietario in Model)
            { 
                
                <tr>
                    
                    <td>@propietario.Apellido</td>
                    <td>@propietario.Nombre</td>
                    <td>@propietario.Dni</td>
                    <td>@propietario.Telefono</td>
                    <td>@propietario.Correo</td>
                    <td class="d-flex gap-2 justify-content-center align-items-center" >
                          <form asp-action="Delete" asp-route-id="@propietario.Id" onsubmit="return confirmarEliminacion(event)">
                              <button type="submit" class="btn btn-danger w-75 h-75 d-flex justify-content-center align-items-center">
                                  <i class="fa-solid fa-trash"></i>  
                              </button>
                          </form>
                         <div >
                           <a href="/Update/@propietario.Id" class="btn btn-primary w-75  d-flex justify-content-center align-items-center"> <i class="fa-regular fa-pen-to-square" style="cursor:pointer;"></i> </a>
                         </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

