@model List<Inmobiliaria.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles";
}

<div class="text-center">
    <h1 class="display-4 mb-5">Inmuebles</h1>

    <table class="table table-striped table-dark table-hover">
        <div class="row d-flex justify-content-between mb-3">
            <div class="col d-flex justify-content-start gap-3 align-items-center ">
               <h5 class="position-relative">Detalle de los Inmuebles @if (ViewBag.NombrePropietario != null) { <span> De @ViewBag.NombrePropietario</span> }</h5>
                @if (ViewBag.Disponibles != null)
                {
                    @if (ViewBag.Disponibles)
                    {
                        <a asp-action="Index" class="btn btn-outline-warning ">Mostrar Todos</a>
                    }
                    else if (!ViewBag.Disponibles)
                    {
                        <a asp-action="IndexDisponibles" class="btn btn-outline-warning ">Mostrar Disponibles</a>

                    }
                }


            </div>
            @if (ViewBag.Disponibles != null)
            {
                <div class="col d-flex justify-content-end">
                    <a href="/Inmuebles/Create" class="btn btn-success "> <i class="fa-solid fa-circle-plus "></i></a>
                </div>

            }

        </div>
        <thead>
            <tr>

                <th>Id</th>
                <th>Propietario</th>
                <th>Direccion</th>
                <th>Uso</th>
                <th>Tipo</th>
                <th>Cant. de Ambientes</th>
                <th>Localizacion</th>
                <th>Precio</th>
                <th>Acciones</th>
            </tr>

        </thead>
        @if (Model.Count > 0)
        {
            <tbody>
                @foreach (var Inmueble in Model)
                {

                    <tr>

                        <td>@Inmueble.Id</td>
                        <td>@Inmueble.Propietario.ToString()</td>
                        <td>@Inmueble.Direccion</td>
                        <td>@Inmueble.Uso</td>
                        <td>@Inmueble.Tipo</td>
                        <td>@Inmueble.CantAmbientes</td>
                        <td>@Inmueble.Latitud , @Inmueble.Longitud</td>
                        <td>$@Inmueble.Precio </td>

                        <td class="d-flex gap-2 justify-content-center align-items-center">
                            @if (User.IsInRole("Administrador"))
                            {
                                <form asp-action="Delete" asp-route-id="@Inmueble.Id" onsubmit="return confirmarEliminacion(event)">
                                    <button type="submit"
                                        class="btn btn-outline-danger w-75 h-75 d-flex justify-content-center align-items-center">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            }
                            <div>
                                <a asp-controller="Inmuebles" asp-action="Update" asp-route-id="@Inmueble.Id"
                                    class="btn btn-outline-primary w-75  d-flex justify-content-center align-items-center"> <i
                                        class="fa-solid fa-pen-to-square" style="cursor:pointer;"></i> </a>
                            </div>
                            <div>
                                <a asp-controller="Inmuebles" asp-action="Details" asp-route-id="@Inmueble.Id"
                                    class="btn btn-outline-info w-75  d-flex justify-content-center align-items-center"> <i
                                        class="fa-solid fa-eye style=" cursor:pointer;""></i> </a>
                            </div>
                            <div>
                                <form asp-action="PausarPlay" asp-route-id="@Inmueble.Id">
                                    <button
                                        class="btn  w-75 @(Inmueble.Disponible==true?"btn-outline-success":"btn-outline-danger") d-flex justify-content-center align-items-center"><i
                                            class="fa-solid @(Inmueble.Disponible==true?"fa-circle-pause":"fa-circle-play")"
                                            style="cursor:pointer;"></i></button>
                                </form>

                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        }
        else
        {
            <tbody>
                <tr>
                    <td colspan="9" class="text-center">No se encontraron Inmuebles para este propietario</td>
                </tr>
            </tbody>
        }

    </table>
    @if (ViewBag.Disponibles == null)
    {
        <div class="form-group mt-3">
            <button type="button" class="btn btn-primary mx-auto" style="width: fit-content;"
                onclick="window.location.href = '/Propietarios'"><i class="fa-solid fa-circle-left"></i></button>
        </div>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    @if (TempData.ContainsKey("AlertMessage") && TempData.ContainsKey("AlertType"))
    {
        var alertMessage = TempData["AlertMessage"];
        var alertType = TempData["AlertType"];
        <text>
                Swal.fire({
                    icon: '@alertType',
                title: '@alertMessage',
                showConfirmButton: false,
                timer: 2000 // Mostrar durante 2 segundos
                                              });
        </text>
    }
</script>
