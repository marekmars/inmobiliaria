@model List<Inmobiliaria.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles";
}

<div class="text-center">
    <h1 class="display-4 mb-5">Inmuebles</h1>

    <table class="table table-striped table-dark table-hover">
        <div class="row d-flex justify-content-between">
            <div class="col d-flex justify-content-start">
                <h5 class="position-relative">Detalle de los Inmuebles</h5>
            </div>
            <div class="col d-flex justify-content-end">
               <a href="/Inmuebles/Create" class="btn btn-success "> <i class="fa-solid fa-circle-plus "></i></a>
            </div>


        </div>
        <thead>
            <tr>
                                
                <th>Id</th>
                <th>Propietario</th>
                <th>Direccion</th>
                <th>Uso</th>
                <th>Tipo</th>
                <th>Cant. de Ambientes</th>
                <th>Localizacion</th>
                <th>Precio</th>
                <th>Acciones</th>        
            </tr>

        </thead>
        <tbody>
            @foreach (var Inmueble in Model)
            { 

                    <tr>

                        <td>@Inmueble.Id</td>
                        <td>@Inmueble.Propietario.ToString()</td>
                        <td>@Inmueble.Direccion</td>
                        <td>@Inmueble.Uso</td>
                        <td>@Inmueble.Tipo</td>
                        <td>@Inmueble.CantAmbientes</td>
                        <td>@Inmueble.Latitud , @Inmueble.Longitud</td>
                        <td>$@Inmueble.Precio </td>                      
                        
                        <td class="d-flex gap-2 justify-content-center align-items-center" >
                          <form asp-action="Delete" asp-route-id="@Inmueble.Id" onsubmit="return confirmarEliminacion(event)">
                              <button type="submit" class="btn btn-danger w-75 h-75 d-flex justify-content-center align-items-center">
                                  <i class="fa-solid fa-trash"></i>  
                              </button>
                          </form>
                         <div >
                           <a href="/Inmuebles/Update/@Inmueble.Id" class="btn btn-primary w-75  d-flex justify-content-center align-items-center"> <i class="fa-solid fa-pen-to-square" style="cursor:pointer;"></i> </a>
                         </div>
                         <div >
                           <a href="/Inmuebles/Details/@Inmueble.Id" class="btn btn-info w-75  d-flex justify-content-center align-items-center"> <i class="fa-solid fa-eye style="cursor:pointer;""></i> </a>
                         </div>
                        </td>
                         
                    </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      @if (TempData.ContainsKey("AlertMessage") && TempData.ContainsKey("AlertType"))
      {
          var alertMessage = TempData["AlertMessage"];
          var alertType = TempData["AlertType"];
          <text>
              Swal.fire({
                  icon: '@alertType',
                  title: '@alertMessage',
                  showConfirmButton: false,
                  timer: 2000 // Mostrar durante 2 segundos
              });
          </text>
      }
    </script>

